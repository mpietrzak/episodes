
Account
    nickname Text Maybe
    email Text Maybe
    password Text Maybe
    admin Bool DEFAULT=False
    accessedApprox UTCTime
    views Int
    created UTCTime
    modified UTCTime
    UniqueAccountNickname nickname !force
    UniqueAccountEmail email !force
    deriving Typeable

Show
    title Text
    tvRageId Int Maybe
    subscriptionCount Int DEFAULT=0
    nextUpdate UTCTime
    lastUpdate UTCTime
    created UTCTime
    modified UTCTime
    UniqueShowTVRageId tvRageId !force

Season
    number Int
    show ShowId
    created UTCTime
    modified UTCTime
    UniqueShowSeasonNumber show number

SeasonCollapse
    account AccountId
    season SeasonId
    collapsed Bool
    UniqueSeasonCollapseSeasonAccount account season

Episode
    title Text
    number Int
    season SeasonId
    airDateTime UTCTime
    viewCount Int DEFAULT=0
    created UTCTime
    modified UTCTime
    UniqueSeasonEpisodeNumber season number

Subscription
    account AccountId
    show ShowId
    nextEpisode EpisodeId Maybe
    lastEpisode EpisodeId Maybe
    created UTCTime
    modified UTCTime
    UniqueSubscriptionAccountShow account show

EpisodeStatus
    account AccountId
    episode EpisodeId
    status Text
    created UTCTime
    modified UTCTime
    UniqueEpisodeStatusAccountEpisode account episode

Profile
    account AccountId
    timezone Text Maybe
    cookie Text Maybe
    episodeLinks Text Maybe
    created UTCTime
    modified UTCTime
    UniqueProfileAccount account
    UniqueProfileCookie cookie !force

