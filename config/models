
-- By default this file is used in Model.hs (which is imported by Foundation.hs)

User
    ident Text
    password Text Maybe
    admin Bool DEFAULT=False
    UniqueUser ident
    deriving Typeable

Email
    email Text
    user UserId Maybe
    verkey Text Maybe
    UniqueEmail email

Show
	title Text
	tvRageId Int Maybe
    subscriptionCount Int DEFAULT=0
    UniqueShowTVRageId tvRageId !force

Season
	number Int
	show ShowId
	UniqueShowSeasonNumber show number

Episode
	title Text
	number Int
	season SeasonId
    airDateTime UTCTime
    viewCount Int DEFAULT=0
	UniqueSeasonEpisodeNumber season number

Subscription
	user UserId
	show ShowId
    UniqueSubscriptionUserShow user show

EpisodeStatus
    user UserId
    episode EpisodeId
    status Text
    UniqueEpisodeStatusUserEpisode user episode

Profile
    user UserId
    timezone Text
    UniqueProfileUser user
