
Account
    nickname Text Maybe
    email Text Maybe
    password Text Maybe
    admin Bool DEFAULT=False
    accessedApprox UTCTime
    views Int
    created UTCTime
    modified UTCTime
    UniqueAccountNickname nickname !force
    UniqueAccountEmail email !force
    deriving Typeable

Show
    title              Text
    tvRageId           Int        Maybe
    subscriptionCount  Int        DEFAULT=0
    nextUpdate         UTCTime    Maybe
    lastUpdate         UTCTime    Maybe
    public             Bool       DEFAULT=False
    submitted          Bool       DEFAULT=False
    addedBy            AccountId  Maybe
    local              Bool       Maybe
    created            UTCTime
    modified           UTCTime
    UniqueShowTVRageId tvRageId !force

Season
    number Int
    show ShowId
    created UTCTime
    modified UTCTime
    UniqueShowSeasonNumber show number

SeasonCollapse
    account AccountId
    season SeasonId
    collapsed Bool
    UniqueSeasonCollapseSeasonAccount account season

Episode
    title Text
    number Int
    season SeasonId
    airDateTime UTCTime Maybe
    viewCount Int DEFAULT=0
    created UTCTime
    modified UTCTime
    UniqueSeasonEpisodeNumber season number

Subscription
    account AccountId
    show ShowId
    nextEpisode EpisodeId Maybe
    lastEpisode EpisodeId Maybe
    created UTCTime
    modified UTCTime
    UniqueSubscriptionAccountShow account show

EpisodeStatus
    account AccountId
    episode EpisodeId
    status Text
    created UTCTime
    modified UTCTime
    UniqueEpisodeStatusAccountEpisode account episode

Profile
    account AccountId
    timezone Text Maybe
    cookie Text Maybe
    episodeLinks Text Maybe
    created UTCTime
    modified UTCTime
    UniqueProfileAccount account
    UniqueProfileCookie cookie !force

ShowChange
    show ShowId
    author AccountId
    created UTCTime
    modified UTCTime

ShowChangeAddSeasons
    change ShowChangeId
    count Int
    created UTCTime
    modified UTCTime

ShowChangeEditSeason
    change ShowChangeId
    number Int
    created UTCTime
    modified UTCTime

ShowChangeDeleteSeason
    change ShowChangeId
    season SeasonId
    created UTCTime
    modified UTCTime

ShowChangeAddEpisodes
    change ShowChangeId
    season SeasonId
    count Int
    created UTCTime
    modified UTCTime

ShowChangeDeleteEpisode
    change ShowChangeId
    episode EpisodeId
    created UTCTime
    modified UTCTime

ShowChangeEditEpisode
    change ShowChangeId
    episode EpisodeId
    title Text Maybe
    number Int Maybe
    created UTCTime
    modified UTCTime

