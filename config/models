
Account
    nickname Text Maybe
    email Text Maybe
    password Text Maybe
    admin Bool DEFAULT=False
    UniqueAccountNickname nickname !force
    UniqueAccountEmail email !force
    deriving Typeable

Show
    title Text
    tvRageId Int Maybe
    subscriptionCount Int DEFAULT=0
    UniqueShowTVRageId tvRageId !force

Season
    number Int
    show ShowId
    UniqueShowSeasonNumber show number

Episode
    title Text
    number Int
    season SeasonId
    airDateTime UTCTime
    viewCount Int DEFAULT=0
    UniqueSeasonEpisodeNumber season number

Subscription
    account AccountId
    show ShowId
    created UTCTime
    modified UTCTime
    UniqueSubscriptionAccountShow account show

EpisodeStatus
    account AccountId
    episode EpisodeId
    status Text
    UniqueEpisodeStatusAccountEpisode account episode

Profile
    account AccountId
    timezone Text Maybe
    UniqueProfileAccount account

